<div class="container">
    <h2 class="my-4">Your Cart</h2>

    @if (Model.Items.Count == 0)
    {
        <p class="lead">Your cart is empty.</p>
    }
    else
    {
        <ul class="list-group mb-4">
            @foreach (var item in Model.Items)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @item.Product.Name - @item.Product.Price € (@item.Quantity)
                    <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.Product.Id" class="btn btn-danger">Remove from cart</a>
                </li>
            }
        </ul>

        <p class="lead">Total: @Model.TotalPrice €</p>
        <a asp-controller="Payment" asp-action="Index" class="btn btn-success">Checkout</a>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">add more product</a>
</div>
